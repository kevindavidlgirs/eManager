<f:UserControlBase x:Class="prbd_1920_g04.Views.PlayersStatisticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:f="clr-namespace:PRBD_Framework;assembly=PRBD_Framework"
             xmlns:local="clr-namespace:prbd_1920_g04.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <DataGrid x:Name="dataGrid" ItemsSource="{Binding ListPlayersView}" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single">
        <DataGrid.Columns>
            <DataGridTextColumn Header="FirstName" Binding="{Binding Path=FirstName}" Width="auto" />
            <DataGridTextColumn Header="LastName" Binding="{Binding Path=LastName}" Width="auto"/>
            <DataGridTextColumn Header="-" Binding="{Binding Path=Stats.GoalsScored}" Width="auto"/>
            <DataGridTextColumn Header="-" Binding="{Binding Path=Stats.GoalsConceced}" Width="auto" />
            <DataGridTextColumn Header="-" Binding="{Binding Path=Stats.Assists}" Width="auto" />
            <DataGridTextColumn Header="-" Binding="{Binding Path=Stats.Fouls}" Width="auto" />
        </DataGrid.Columns>
    </DataGrid>
</f:UserControlBase>
