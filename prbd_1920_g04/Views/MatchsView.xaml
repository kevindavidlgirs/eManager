<f:UserControlBase x:Class="prbd_1920_g04.Views.MatchsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:f="clr-namespace:PRBD_Framework;assembly=PRBD_Framework"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:local="clr-namespace:prbd_1920_g04"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Grid Margin="10" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <TextBox Text="{Binding Filter, UpdateSourceTrigger=PropertyChanged}" FontSize="14" />
            <Button Content="Clear" Grid.Column="1" Command="{Binding ClearFilter}" Margin="5,0,0,0" />
        </Grid>
        <ListView x:Name="listView" 
                  ItemsSource="{Binding Matchs}" 
                  Grid.Row="2" BorderBrush="Transparent" SelectionMode="Single" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <!--<i:Interaction.Triggers>
                Si le membre existe déjà, une autre fenêtre s'ouvre avec ses info
                <i:EventTrigger EventName="MouseDoubleClick">
                    <i:InvokeCommandAction Command="{Binding DisplayMemberDetails}" 
                                           CommandParameter="{Binding ElementName=listView, Path=SelectedItem}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>-->
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <!--<Image Width="80" Height="80" 
                               Source="{Binding AbsolutePicturePath, Converter={f:UriToCachedImageConverter}, TargetNullValue={StaticResource UnknownUser}}" 
                               RenderOptions.BitmapScalingMode="Fant" Stretch="UniformToFill" />-->
                        <TextBlock FontSize="25" FontWeight="Bold" Height="60" Width="60" TextAlignment="Center" VerticalAlignment="Center" Text="{Binding Date,StringFormat=M/d}" />
                        <TextBlock FontSize="25" FontWeight="Bold" Height="60" Width="100" TextAlignment="Center" VerticalAlignment="Center" Text="{Binding Home}" />
                        <TextBlock FontSize="25" FontWeight="Bold" Height="60" Width="40" TextAlignment="Center"  VerticalAlignment="Center" Text="VS" />
                        <TextBlock FontSize="25" FontWeight="Bold" Height="60" Width="100" TextAlignment="Center" VerticalAlignment="Center" Text="{Binding Adversary}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</f:UserControlBase>
